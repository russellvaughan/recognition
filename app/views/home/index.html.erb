
<div class="container col-md-6">
<%= form_tag "/home/upload_picture", method: :post, multipart: true, class: 'form-group' do %>
    <%= file_field_tag :image_file_data, class: "form-control", onChange: "preview()" %>
    <%= submit_tag 'Upload', class: 'btn btn-primary' %>
<% end %>

<img id="frame" src="" class="img-fluid"  />


</div>


        <script>
            function preview() {
                frame.src = URL.createObjectURL(event.target.files[0]);
            }
            function clearImage() {
                document.getElementById('formFile').value = null;
                frame.src = "";
                frame.height = "250"
                frame.width = "250"
            }
        </script>


